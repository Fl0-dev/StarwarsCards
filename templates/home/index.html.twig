{% extends 'base.html.twig' %}

{% block title %}Liste des personnages
{% endblock %}

{% block body %}
	<div class="grid lg:grid-cols-4 md:grid-cols-2 grid-cols-1 gap-4 justify-items-center">
		{% for personnage in personnages %}
			<div class="w-full max-w-sm border rounded-lg bg-gray-800 border-gray-700">
				<div class="flex flex-col items-center pb-10 pt-5">
					<img class="w-24 h-24 mb-3 rounded-full shadow-lg" src={{personnage.photo}} alt={{"random pour " ~ personnage.name}}/>
					<h5 class="mb-1 text-xl font-medium  text-white">{{ personnage.name }}</h5>
					<span class="text-sm  text-gray-400">Ann√©e de naissance :
						{{ personnage.birth_year }}</span>
					<span class="text-sm  text-gray-400">Taille :
						{{ personnage.height }}</span>
					<span class="text-sm  text-gray-400">Poids :
						{{ personnage.mass }}</span>
					<span class="text-sm  text-gray-400">Couleur des cheveux :
						{{ personnage.hair_color }}</span>
					<span class="text-sm  text-gray-400">Couleur des yeux :
						{{ personnage.eye_color }}</span>
					<span class="text-sm  text-gray-400">Couleur de peau :
						{{ personnage.skin_color }}
					</span>
					<div class="flex mt-4 md:mt-6">
						<a href="{{ path( 'app_personnage', {'id': personnage.url|replace({ 'https://swapi.py4e.com/api/people/': '', '/': '' }) }) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white rounded-lg focus:ring-4 focus:outline-none bg-blue-600 hover:bg-blue-700 focus:ring-blue-800">
							Voir Profil
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
